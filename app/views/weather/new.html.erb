<div class="weather-container">
  <h1 class="weather-title">Weather Forecast</h1>

  <% if flash[:error] %>
    <div class="weather-error">
      <%= flash[:error] %>
    </div>
  <% end %>

  <%= form_with(model: @forecast, url: weather_index_path, method: :post, class: "weather-form") do |f| %>
    <div class="weather-form-group">
      <%= f.label :location, "Enter US zip code", class: "weather-label" %>
      <%= f.text_field :location, class: "weather-input #{@forecast.errors[:location].any? ? 'error' : ''}" %>
      <% if @forecast.errors[:location].any? %>
        <p class="weather-error-message"><%= @forecast.errors[:location].join(", ") %></p>
      <% end %>
    </div>

    <%= f.submit "Get Forecast", class: "weather-submit" %>
  <% end %>
</div>
